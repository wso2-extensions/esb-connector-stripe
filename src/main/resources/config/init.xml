<template name="init" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="apiUrl" description="URL of the Stripe API"/>
    <parameter name="apiVersion" description="Api Version"/>
    <parameter name="apiKey" description="API key"/>
    <parameter name="blocking"
               description="The blocking parameter is helping connector performs the blocking invocations to Stripe"/>
    <sequence>
        <property name="uri.var.apiUrl" expression="$func:apiUrl"/>
        <property name="uri.var.apiVersion" expression="$func:apiVersion"/>
        <property name="uri.var.apiKey" expression="$func:apiKey"/>
        <property name="STRIPE_BLOCKING" expression="$func:blocking"/>
        <filter source="boolean($ctx:uri.var.apiKey)" regex="true">
            <then>
                <header name="Authorization" expression="fn:concat('Bearer ',get-property('uri.var.apiKey'))"
                        scope="transport"/>
            </then>
        </filter>
        <header name="Content-Type" value="application/x-www-form-urlencoded" scope="transport"/>
    </sequence>
</template>